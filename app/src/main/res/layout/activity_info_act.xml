        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/biblioteca" />

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="319dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="296dp"
                android:layout_height="274dp"
                android:text="Biblioteca virtual, aplicación donde podrás analizar
profundamente el contenido de los libros utilizando QR, no te preocupes
porque ahora podrás organizar tus búsquedas virtuales y asignar diversos
roles por usuarios según la categoria del libro que quieras encontrar.

además te prometemos la gestión de Base de datos con los mejores libros
de la semana y la mejor seguridad para el acceso de datos y títulos mas
comprometedores, utilizaremos algoritmos de encriptación y manejaremos
su correcto uso, Gracias por usar Biblioteca Virtual.
"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>